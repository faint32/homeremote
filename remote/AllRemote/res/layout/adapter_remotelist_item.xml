<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:padding="5dip"
	
	>
	<!-- android:descendantFocusability= "blocksDescendants"  -->
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="1"
		 >
		 <TextView
		 		android:id="@+id/remote_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:textSize="16sp"
                android:text=""
                android:textColor="#000000" />
        <TextView
        		android:visibility="gone"
		 		android:id="@+id/ali_tv_attr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textSize="16sp"
                android:text=""
                android:textColor="#000000" />
		 <Spinner
	    	android:id="@+id/remote_type"
	        android:layout_width="150dip" 	       
		    android:layout_height="40dip" 
            android:layout_marginRight="5dip"
         />
		 <EditText
              android:id="@+id/remote_name"
              android:layout_width="150dip"
              android:layout_height="40dip"
              android:hint="请输入名字"
              android:numeric="integer"
              android:textSize="13sp" />
         <Button  
			android:id="@+id/code_select" 
			android:layout_height="30dip" 	
			android:layout_width="30dip"
			android:background="@drawable/menu_list"
		    />
		 
		
	</LinearLayout>
	
	<!-- 图片	-->
	<LinearLayout
	    android:orientation="horizontal"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dip"
		 >
		<Button  
			android:id="@+id/remote_delete" 
			android:layout_height="30dip" 	
			android:layout_width="30dip"
			android:background="@drawable/menu_del"
		    />
	</LinearLayout>
	
	
	
			 
</LinearLayout>
